apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    service: "app-{{ color }}"
  name: "app-{{ color }}"
spec:
  hostNetwork: true
  replicas: 2
  selector:
    matchLabels:
      service: "app-{{ color }}"
  template:
    metadata:
      labels:
        service: "app-{{ color }}"
    spec:
      containers:
      - name: "app-{{ color }}"
        image: iacopoiacopo/cloudimagefilter
        ports:
        - containerPort: 8080